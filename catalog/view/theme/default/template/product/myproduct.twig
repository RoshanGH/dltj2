    $(document).ready(function () {
//加的效果
        $(".up").click(function () {
            var n = $(this).prev().val();
            var num = parseInt(n) + 1;
            $("#down1").show();
            $("#down2").hide();
            if (num == 0) {
                return;
            }
            $(this).prev().val(num);
            $("#ssl").text(num);
            $("#title-price").text(num *{{ price_num }});
            $("#sum").val(num *{{ price_num }});
            $("#order_price").text(num *{{ price_num }});
        });
//减的效果
        $(".down").click(function () {
            var n = $(this).next().val();
            var num = parseInt(n) - 1;
            if (num == 1) {
                $("#down1").hide();
                $("#down2").show();
            }
            if (num == 0) {
                return
            }
            $(this).next().val(num);
            $("#ssl").text(num);
            $("#title-price").text(num *{{ price_num }});
            $("#sum").val(num *{{ price_num }});
            $("#order_price").text(num *{{ price_num }});
        });
    })
</script>
